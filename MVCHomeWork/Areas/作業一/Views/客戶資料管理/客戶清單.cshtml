@model IEnumerable<MVCHomeWork.Areas.作業一.Models.清單>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th style="width: 500px;">
                @Html.DisplayNameFor(p => p.客戶名稱)
            </th>
            <th style="width: 100px; text-align:center">
                @Html.DisplayNameFor(p => p.銀行帳戶數量)
            </th>
            <th style="width: 100px; text-align:center">
                @Html.DisplayNameFor(p => p.聯絡人數量)
            </th>
            <th style="width: 180px; text-align:center">功能</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => p.客戶名稱)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => p.銀行帳戶數量)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => p.聯絡人數量)
                </td>
                <td style="text-align:center">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-xs btn-info" onclick="loadEdit('@p.Id', '@Url.Action("Edit", "客戶資料管理")')">編輯</button>
                        <button type="button" class="btn btn-xs btn-warning" onclick="loadEdit('@p.Id', '@Url.Action("Detail", "客戶資料管理")')">檢視</button>
                        <button type="button" class="btn btn-xs btn-danger" onclick="delCompanyData('@p.Id', '@p.客戶名稱')">刪除</button>
                    </div>
                    <div class="col-sm-12" style="margin-top: 3px;">
                        @if (p.銀行帳戶數量 > 0)
                        {
                            <button type="button" class="btn btn-xs btn-success" onclick="loadBankInfo('@p.Id')">檢視銀行帳戶</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-xs btn-primary" onclick="loadEditBankInfo('@p.Id', 0, '@Url.Action("Edit", "客戶銀行帳戶管理")')">新增銀行帳戶</button>
                        }
                        @if (p.聯絡人數量 > 0)
                        {
                            <button type="button" class="btn btn-xs btn-success" onclick="loadContactPersonInfo('@p.Id')">檢視聯絡人</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-xs btn-primary" onclick="loadEditContactPersonInfo('@p.Id', 0, '@Url.Action("Edit", "客戶聯絡人管理")')">新增聯絡人</button>
                        }
                    </div>
                </td>

            </tr>
        }
    </table>
}
else
{
    <h3 style="color: red;">查無資料</h3>
}