@model MVCHomeWork.Areas.HomeWork.Models.QueryContactModel

<div class="col-md-12 content">
    <div class="panel panel-default" style="margin-top: 10px;">
        <div class="panel-heading">
            <h4>客戶聯絡人資料查詢</h4>
            <div class="pull-right" style="margin-top: -37px;">
                <div class="btn-group">
                    <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                        匯出EXCEL <i class="fa fa-caret-down"></i>
                    </a>
                    <ul role="menu" class="dropdown-menu">
                        <li><a onclick="ExportExcel('@Url.Action("ExportXLSList", "Contact")')" href="#">匯出XLS</a></li>
                        <li><a onclick="ExportExcel('@Url.Action("ExportXLSXList", "Contact")')" href="#">匯出XLSX</a></li>
                    </ul>
                </div>
                <button id="btnSearch" type="button" class="btn btn-success" onclick="loadDataList($('#formQuery').MVCModelSerialize());">查詢</button>
                <button id="btnCreateClient" type="button" class="btn btn-primary" onclick="loadEditContactPersonInfo(0, 0, '@Url.Action("Edit", "Contact")');">新增</button>
            </div>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formQuery", autocomplete = "off" }))
            {
                <ul class="inline">
                    <li class="li-small">
                        @Html.LabelFor(p => p.CompanyNo)
                        @Html.TextBoxFor(p => p.CompanyNo)
                    </li>
                    <li class="li-xxlarge">
                        @Html.LabelFor(p => p.CompanyName)
                        @Html.TextBoxFor(p => p.CompanyName)
                    </li>
                    <li class="li-medium">
                        @Html.LabelFor(p => p.ContactName)
                        @Html.TextBoxFor(p => p.ContactName)
                    </li>
                </ul>
            }
        </div>
    </div>
    <div id="ContactList" class="panel panel-default" style="margin-top: -15px;">
        <div class="panel-heading">
            <h4 id="listTitle"></h4>
        </div>
        <div id="ContactListView" class="panel-body"></div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        loadDataList($('#formQuery').MVCModelSerialize());
    });
</script>